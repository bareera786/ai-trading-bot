{
  "roles": ["ADMIN", "USER"],
  "permissions": {
    "ADMIN": ["create_user", "delete_user", "update_user", "view_logs", "manage_robot"],
    "USER": ["view_profile", "update_profile", "run_strategy", "view_performance"]
  },
  "database": {
    "type": "sqlite",
    "sqlite": {"file": "./database_layer/db.sqlite"},
    "firebase": {"projectId": "your-firebase-project-id"},
    "mysql": {"host": "localhost", "user": "root", "password": "", "database": "ai_bot"}
  },
  "server": {
    "port": 4000,
    "jwtSecret": "your-secure-jwt-secret",
    "jwtRefreshSecret": "your-secure-jwt-refresh-secret"
  },
  "frontend": {
    "basePath": "/",
    "dashboardPath": "/dashboard",
    "loginPath": "/login",
    "registerPath": "/register"
  },
  "robot": {
    "commands": ["start_robot", "stop_robot", "restart_robot", "set_strategy", "view_robot_logs", "run_strategy", "check_robot_status", "view_performance"]
  },
  "ribs": {
    "enabled": true,
    "optimization_interval_hours": 6,
    "iterations_per_cycle": 200,
    "max_elite_strategies": 5,
    "auto_deploy_elites": true,
    "checkpoint_interval": 50
  }
}
